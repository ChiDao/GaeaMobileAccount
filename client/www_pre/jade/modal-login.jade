ion-modal-view.Pages.pass-code
  ion-header-bar.bar
    .title.color-w {{'captcha'|translate}}
    .buttons
      button.color-bule.button.button-clear(ng-click='mustChoise?cancelModal():closeModal()') {{'cancel'|translate}}
  form(name='loginForm', novalidate="", ng-submit='commitForm(loginForm)')
    ion-content.color-w.dark
      .game-bg.screenHeight
        div.top
          img(src="img/data/soul-clash/logo.png",srcset="img/data/soul-clash/logo@2x.png 2x")
        .black
          .row.no-padding
            .col.no-padding

              .input(ng-class="{'has-error': loginForm.password.$invalid}")
                input.right-arrows(name='password',placeholder="驗證碼" type='number', ng-model='formData.password',ng-minlength='4', ng-maxlength='4', required)
                //- .timer 
                //-   input.number(type="tel", placeholder="")
                //-   input.number(type="tel", placeholder="")
                //-   input.number(type="tel", placeholder="")
                //-   input.number(type="tel", placeholder="")
              hr
              div(ng-messages='loginForm.password.$error', ng-messages-include='templates/form-errors.html')
                p.message.form-error(ng-message='required') 請輸入郵箱收到的驗證碼
                p.message.form-error(ng-message='number') 需要 4 位驗證碼
                p.message.form-error(ng-message='minlength') 最少 4 位驗證碼
                p.message.form-error(ng-message='maxlength') 最大 4 位驗證碼
                p.message.form-error(ng-if="commitFormError") {{commitFormErrorMsg}}
        
    .page-footer.page-padding
        .row
          .col
            button#buttonOk.a-button.button.main-button.right-arrows(type='submit') {{'next'|translate}}
      

